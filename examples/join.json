{
  "sources": {
    "salaries": {
      "schema": [
        {
          "column_name": "first_name",
          "data_type": "String",
          "mandatory": true
        },
        {
          "column_name": "salary",
          "data_type": "Decimal",
          "mandatory": true
        }
      ],
      "source": {
        "type": "File",
        "format": "Csv",
        "path": "./examples/salaries.csv"
      }
    },
    "lastnames": {
      "schema": [
        {
          "column_name": "first_name",
          "data_type": "String",
          "mandatory": true
        },
        {
          "column_name": "last_name",
          "data_type": "String",
          "mandatory": true
        }
      ],
      "source": {
        "type": "File",
        "format": "Csv",
        "path": "./examples/lastnames.csv"
      }
    }
  },
  "transformations": {
    "joined": {
      "sources": [
        "salaries",
        "lastnames"
      ],
      "operations": [
        {
